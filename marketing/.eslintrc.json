{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignorePatterns": ["jest.config.js"],
    "overrides": [
      {
        "files": ["**/*.test.ts"],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": 0,
      "prettier/prettier": [
        "error",
        {
          "printWidth": 80,
          "tabWidth": 2,
          "singleQuote": true,
          "trailingComma": "all",
          "arrowParens": "always",
          "semi": false,
          "endOfLine": "auto"
        }
      ]
    }
  }